{
	"compilerOptions": {
		"outDir": "out",
		"sourceMap": true,
		"lib": ["es2020"],
		"module": "nodenext",
		"target": "es2020",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "NodeNext",
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}