		"typescript": "^5.4.5"
	},
	"jest": {
		"testEnvironment": "node",
		"coverageProvider": "v8",
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/index.{js,jsx,ts,tsx}"
