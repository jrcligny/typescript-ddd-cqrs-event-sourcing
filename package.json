{
	"name": "@jrcligny/typescript-ddd-cqrs-event-sourcing",
	"private": true,
	"version": "0.1.0",
	"description": "A project to learn and experiment with Domain-Driven Design, Command Query Responsibility Segregation and Event Sourcing patterns.",
	"keywords": [
		"typescript",
		"ddd",
		"cqrs",
		"event-sourcing"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jrcligny/ddd-with-cqrs-and-event-sourcing.git"
	},
	"bugs": {
		"url": "https://github.com/jrcligny/ddd-with-cqrs-and-event-sourcing/issues"
	},
	"homepage": "https://github.com/jrcligny/ddd-with-cqrs-and-event-sourcing#readme",
	"author": "Jean-RÃ©my Cligny",
	"license": "SEE LICENSE IN LICENSE.MD",
	"type": "module",
	"scripts": {
		"test": "jest",
		"coverage": "jest --coverage",
		"build": "tsc"
	},
	"devDependencies": {
		"@tsconfig/node14": "^14.1.2",
		"@types/jest": "^29.5.12",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.3",
		"typescript": "^5.4.5"
	},
	"jest": {
		"testEnvironment": "node",
		"coverageProvider": "v8",
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/index.{js,jsx,ts,tsx}"
		],
		"coverageThreshold": {
			"global": {
				"branches": 70,
				"functions": 70,
				"lines": 70,
				"statements": 70
			},
			"./src/framework/**/*.{js,jsx,ts,tsx}": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		},
		"extensionsToTreatAsEsm": [
			".ts"
		],
		"moduleNameMapper": {
			"^(\\.{1,2}/.*)\\.js$": "$1"
		},
		"transform": {
			"^.+\\.tsx?$": [
				"ts-jest",
				{
					"useESM": true
				}
			]
		}
	}
}